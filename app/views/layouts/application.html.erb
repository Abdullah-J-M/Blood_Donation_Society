<!DOCTYPE html>
<html>
  <head>
    <title>Blood Donation Society</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Baloo+Chettan+2&display=swap' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag asset_path('blood.ico') %>
  </head>
  <body>
    <%= render 'layouts/navigation' %>
    <div class = "container">
      <% flash.each do |name, msg| %>
        <% if name == "alert" %>
          <div class = "alert alert-danger mt-3" role="alert">
            <ul class="pt-3">
            <li><%= msg %></li>
          </ul>
        </div>
        <% else %>
          <div class = "alert alert-info mt-3" role="alert">
            <ul class="pt-3">
            <li><%= msg %></li>
          </ul>
        </div>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>

